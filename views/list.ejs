<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
  <header>
    <h1>Todo List</h1>
  </header>

  <div class="box">
    <!-- Add Task -->
    <form action="/add" method="post" class="todo">
      <input type="text" name="ele1" placeholder="Enter the task">
      <select name="priority">
        <option value="high">High</option>
        <option value="medium">Medium</option>
        <option value="low" selected>Low</option>
      </select>
      <button type="submit">+</button>
    </form>

    <!--  Priority -->
    <form action="/filter" method="GET" class="filter">
      <select name="priority" onchange="this.form.submit()">
        <option value="">All</option>
        <option value="high">High</option>
        <option value="medium">Medium</option>
        <option value="low">Low</option>
      </select>
    </form>

    <!--  List -->
    <ul>
      <% items.forEach(function(item) { %>
        <li>
          <!--  Checkbox -->
          <form action="/toggle" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="<%= item._id %>">
            <input type="checkbox" onChange="this.form.submit()" <%= item.done ? 'checked' : '' %> >
          </form>

          <!-- Task  -->
          <p style="<%= item.done ? 'text-decoration: line-through; color: gray;' : '' %>">
            <%= item.text %>
            <span class="priority <%= item.priority %>">[<%= item.priority %>]</span>
          </p>

          <!-- Edit  -->
          <form action="/edit" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="<%= item._id %>">
            <input type="text" name="newText" placeholder="Edit task">
            <button type="submit"><i class="bi bi-pencil"></i></button>
          </form>

          <!-- Delete -->
          <form action="/delete" method="POST" style="display:inline;">
            <input type="hidden" name="id" value="<%= item._id %>">
            <button type="submit"><i class="bi bi-trash"></i></button>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>

  <footer>
    <p>Â© 2025 Todo App | All right Reserved</p>
  </footer>
</body>
</html>
